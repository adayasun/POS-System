<UserControl x:Class="adayasundara_RD_A03.Views.ProductInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:adayasundara_RD_A03.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF00FB30" Offset="0.43"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Text="View Product Quantities" Margin="10" FontSize="20" FontWeight="Bold"/>
        <DataGrid x:Name="productInfo" Loaded="productInfo_Loaded" AutoGenerateColumns="True" Height="400" Width="500"/>
    </Grid>
</UserControl>
