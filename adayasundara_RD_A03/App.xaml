<Application x:Class="adayasundara_RD_A03.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:adayasundara_RD_A03"
             xmlns:vm="clr-namespace:adayasundara_RD_A03.ViewModels"
             xmlns:view="clr-namespace:adayasundara_RD_A03.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:OrdersViewModel}">
            <view:Orders/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:CustomerViewModel}">
            <view:Customer/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProductViewModel}">
            <view:ProductInfo/>
        </DataTemplate>
    </Application.Resources>
</Application>
